def obter_resposta():
    while True:
        resposta = input("Responda com sim ou não a pergunta da frase que te fiz ali em cima: ").lower()
        if resposta == "sim":
            return True
        elif resposta == "não":
            print("Resposta inserida inválida bobona 😝.")
        else:
            print("Resposta inserida inválida bobona 😝.")

resposta = obter_resposta()
print("Você respondeu:", resposta)

